<resources>

    <!-- Base application theme. -->
    <style name="HabraTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/textColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/button_reaised</item>
    </style>
    <style name="RadioButtonLowPriority" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColorLowPriority</item>
    </style>

    <style name="RadioButtonMediumPriority" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColorMediumPriority</item>
    </style>

    <style name="RadioButtonHighPriority" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColorHighPriority</item>
    </style>
    <style name="CheckBoxStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>
