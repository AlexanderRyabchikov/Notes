<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutButton">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancelBt"
                android:text="@string/bt_cancel"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_gravity="top"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveBt"
                android:text="@string/bt_save"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_gravity="top"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#7b7b7b"
            android:layout_below="@+id/linearLayoutButton"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayoutButton">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutEditTextTitle">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTitle"
                    android:textAlignment="center"
                    android:hint="@string/edit_text_title"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayoutCreateContent"
                android:layout_below="@+id/linearLayoutEditTextTitle">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:inputType="textMultiLine"
                    android:id="@+id/editTextContent"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:hint="@string/edit_text_content"
                    android:gravity="start" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/linearLayoutCreateContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/RadioGroup"
                    android:layout_gravity="center|bottom"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:theme="@style/RadioButtonLowPriority"
                        android:layout_width="match_parent"
                        android:id="@+id/lowPriority"
                        android:layout_weight="1"
                        android:text="@string/low_priority"
                        android:textColor="@color/textColorLowPriority"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:theme="@style/RadioButtonMediumPriority"
                        android:layout_width="match_parent"
                        android:id="@+id/mediumPriority"
                        android:layout_weight="1"
                        android:textColor="@color/textColorMediumPriority"
                        android:text="@string/medium_priority"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:theme="@style/RadioButtonHighPriority"
                        android:layout_width="match_parent"
                        android:id="@+id/highPriority"
                        android:textColor="@color/textColorHighPriority"
                        android:text="@string/high_priority"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </RadioGroup>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>