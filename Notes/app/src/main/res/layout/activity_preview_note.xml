<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutButton">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backBt"
                android:text="@string/backBt"
                style="@style/ButtonStyle"
                android:textAlignment="center"
                android:layout_gravity="top"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/separator"
            android:layout_below="@+id/linearLayoutButton"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/relativeLayPreView"
            android:layout_below="@+id/linearLayoutButton">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutTextTitle">
                <TextView
                    android:layout_width="match_parent"
                    android:background="@drawable/border_edit_text"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/TextPreView"
                    android:textAlignment="center" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/separator"
                android:layout_below="@+id/linearLayoutTextTitle"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/TextContentPreview"
                android:layout_margin="4dp"
                android:layout_below="@+id/linearLayoutTextTitle">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border_edit_text"
                    android:id="@+id/TextContent"
                    android:lines="6"
                    android:maxLength="256"
                    android:textSize="25sp"
                    android:minLines="3"
                    android:maxLines="9"
                    android:scrollbars="vertical"
                    android:gravity="start" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:id="@+id/viewLineAfterTextContent"
                android:layout_height="2dp"
                android:background="@drawable/separator"
                android:layout_below="@+id/TextContentPreview"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/viewLineAfterTextContent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>